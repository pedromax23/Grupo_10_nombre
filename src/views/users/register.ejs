<!DOCTYPE html>
<html>

    <%- include('../partials/head', {estilos: "register", titulo: "La cerveza - Registrate", script: ""})%>

<body>

    <%- include('../partials/header')%>

    <main class="registro">
        <form class="formulario" action="/user/register" method="POST"> 

            <!-- Nombre -->
            <div> 
                <input placeholder="Nombre" type="text" required name="nombre" minlength="3"/>
            </div>

            <!-- Apellido -->
            <div> 
                <input placeholder="Apellido" type="text" required name="apellido" minlength="3"/>
            </div>
    
            <!-- Nombre de usuario -->
            <div>
                <input placeholder="Nombre de usuari@" type="text" required name="nombreUsuario"/>
            </div>
    
            <!-- Email -->
            <div>
                <input placeholder="Email" type="email" required name="email"/>
            </div>

            <!-- Password -->
            <div>
                <input placeholder="ContraseÃ±a..." type="password" required name="password"/>
            </div>
    
            <!-- Fecha de nacimiento -->
            <div class="fecha-nacimiento">
                <label for="fecha-nacimiento">Fecha de nacimiento</label>
                <input type="date" required name="fechaNacimiento"/>
            </div>

            <!-- Domicilio -->
            <div>
                <input placeholder="Domicilio" type="text" required name="domicilio"/>
            </div>

            <!-- Comentario -->
            <div>
                <textarea class="comentario" name="comment" id="comment" rows="5" cols="24" maxlength="20" placeholder="Deja tu comentario"></textarea>
            </div>

            <!-- Boton de enviar -->
            <div>
                <button type="submit">Enviar</button> 
            </div>

            <!-- Boton de borrar -->
            <div>
                <button type="reset">Borrar</button> 
            </div>

        </form>
    </main>

    <%- include('../partials/footer')%>


</body>

</html>